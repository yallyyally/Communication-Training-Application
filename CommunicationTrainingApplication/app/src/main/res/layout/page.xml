<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/iv_sample"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Text01"
                android:textSize="33sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="13sp"
                android:layout_alignRight="@id/tv_word"
                android:layout_alignBaseline="@id/tv_word"
                android:background="@drawable/round_light_gray_btn"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_meaning"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:fontFamily="casual"
            android:textSize="15sp"
            android:text="here is meaning of the word text01.\nhere is meaning of the word text01.\n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="예문"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_ex_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.4"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="sample"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:background="@drawable/round_light_gray_bg" />


    </LinearLayout>

</LinearLayout>