<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:background="@drawable/gradient_background_reverse"
    android:id="@+id/ll_dictionary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:padding="15dp"
        android:weightSum="10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="의성어ㆍ의태어 사전"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="9"
            android:textAlignment="textEnd"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="@drawable/top_round_white_shadow_bg"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="15sp">
            <TextView
                android:id="@+id/tv_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="전체"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_uiseong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="의성어"
                android:textSize="15sp"
                android:textColor="@color/lightgray"
                android:background="@android:color/transparent"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_uitae"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="의태어"
                android:textSize="15sp"
                android:textColor="@color/lightgray"
                android:background="@android:color/transparent"
                android:gravity="center"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv"
            android:layout_below="@id/ll_search"
            />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_category">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:paddingHorizontal="30dp"
                android:textSize="15sp"
                android:background="@drawable/shadow"
                android:hint="단어 검색"
                android:singleLine="true"
                />



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>